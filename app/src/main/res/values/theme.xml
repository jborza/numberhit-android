<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/num_bg</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">4px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_menu_button</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">16dip</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#fff</item>
    </style>    
</resources>