<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/num_bg"
    android:paddingBottom="8dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip" >
    <TextView
        android:id="@+id/level"
        style="@style/txt"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:text="99"
        android:textSize="48sp" />
    <TextView
        android:id="@+id/position"
        style="@style/txt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dip"
        android:text="1st"
        android:textColor="#FFF359"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/position_label"
        style="@style/txt"
        android:layout_marginRight="4dip"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@id/position"
        android:layout_alignBaseline="@id/position"
        android:text="Place:"
        android:textSize="13sp" />
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:layout_below="@id/level"
        android:indeterminate="false"
        android:max="1000"
        android:paddingBottom="1dip"
        android:layout_marginBottom="6dip"
        android:progress="66" />
    <!-- stuff -->
    <TextView
        android:id="@+id/my_label"
        style="@style/txt"
        android:layout_below="@id/progress"
        android:layout_marginRight="4dip"
      
        android:text="You:" />
    <TextView
        android:id="@+id/my"
        style="@style/txt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/progress"
       
        android:layout_toRightOf="@id/my_label"
        android:text="99.999"
        android:textColor="#E27171" />
    <TextView
        android:id="@+id/best"
        style="@style/txt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/progress"
      
        android:text="99.999"
        android:textColor="#5BB75B" />
    <TextView
        android:id="@+id/best_label"
        style="@style/txt"
        android:layout_below="@id/progress"
        android:layout_marginRight="4dip"
        
        android:layout_toLeftOf="@id/best"
        android:text="Best:" />
</RelativeLayout>